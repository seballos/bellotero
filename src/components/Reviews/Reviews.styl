@require '../../styles/theme/colors'
@require '../../styles/media'
@require '../../styles/utils'

.reviews
  position relative

  +widerthan(mobile)
    margin-top 5rem
    max-width 1002px

  &__slides
    margin-bottom 4rem
    overflow hidden
    position relative

  &__slider
    box-sizing border-box
    display flex
    list-style none
    margin 0
    padding 0
    transition-duration 350ms
    width 100%

    &__item 
      background-color white
      box-sizing border-box
      display flex
      flex-direction column
      min-width 100%
      padding 2rem
      position relative
      +widerthan(mobile)
        flex-direction row

  &__info
    +widerthan(mobile)
      flex 1 1 40%
    &__name
      line-height: 1.5
      margin 0

    &__position
      color greyish
      display inline-block
      margin-bottom 1rem
  
  &__review
    line-height: 1.33
    margin 0
    +widerthan(mobile)
      flex 1 1 60%

  &__controls
    top 100%
    display flex
    right: 50%
    position: absolute
    transform: translate(50%, -50%)
    +widerthan(large-desktop)
      right: -8%
      transform translateY(-50%) 
      

  &__button--right
    transform: rotate(180deg)

  &__counter
    align-items center
    background cobalt-blue
    color white
    display flex
    font-family 'Cormorant Garamond'
    font-size 32px
    font-style italic
    font-weight: 600
    height 3.75rem
    justify-content center
    margin-right 1px
    width 7.5rem
