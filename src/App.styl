@require './styles/theme/colors'
@require './styles/theme/typography'
  @require './styles/media'
  
body
  background-color background
  margin 0

.container 
  margin 0 auto
  max-width 700px
  padding: 0 1rem

  +widerthan(mobile)
    margin 6.5rem auto 0
    max-width 1100px
    padding: 0 2rem

.heading
  background: primary
  color: white
  display: inline-block
  line-height 1.11
  letter-spacing 0.77px
  padding .25rem

.center {
  display flex
  justify-content center
} 

.color--primary
  color primary
